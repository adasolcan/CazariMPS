	<script type="text/javascript">

	$(document).ready(function() {
             var globalManualUploader  = new qq.FineUploader({
                element: $('#manual-fine-uploader')[0],
                request: {
                endpoint: 'http://fmi-cazare.herokuapp.com/upload/handler' 
                },
                autoUpload: false,
                debug: true,
                text: {
                uploadButton: '<i class="icon-plus icon-white"><\/i> Alege Fisierul'
                },
                template: '<div class="qq-uploader">' +
'<pre class="qq-upload-drop-area"><span>{dragZoneText}</span></pre>' +
'<div class="qq-upload-button btn btn-info" style="width: auto; margin-left: 40px;">{uploadButtonText}</div>' +
'<span class="qq-drop-processing"><span>{dropProcessingText}</span><span class="qq-drop-processing-spinner"></span></span>' +
'<ul class="qq-upload-list" style="margin-top: 10px; margin-left: 420px; text-align: center;"></ul>' +
'</div>'
                });

                $('#triggerUpload').click(function() {
                  
                //var uploadedFileNames =  $('.qq-upload-file').text();
